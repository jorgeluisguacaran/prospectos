<!DOCTYPE html>
<html>
  <head>
    <title>Prospectos</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
  
    
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
        
  </head>

  <body>
      
      <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="#">PROSPECTOS</a>
                    <div class="btn-group pull-right">
                        <% if usuario_signed_in? %>
                        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="icon-user"></i> <strong><%= current_usuario.email %></strong>
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><%= link_to 'Editar Perfil', edit_usuario_registration_path %></li>
                            <li class="divider"></li>
                            <li><%= link_to "Salir", destroy_usuario_session_path, method: :delete %></li>
                        </ul>
                        
                        <% end %>
                    </div>

<!-- 
<div class="btn-group pull-right">
                        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="icon-user"></i> Nombre de Usuario
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Perfil</a></li>
                            <li class="divider"></li>
                            <li><a href="#">Salir</a></li>
                        </ul>
                    </div>
 -->



                    <div class="nav-collapse">
                        <ul class="nav">
                            <li class="active"><a href="#">Inicio</a></li>
                            <li><a href="#">Acerca de</a></li>
                            <li><a href="#">Opciones</a></li>
                            <li><a href="#">Contacto</a></li>
                            <p class="navbar-text pull-right">
                            <% if usuario_signed_in? %>
                                Registrado como <strong><%= current_usuario.email %></strong>.
                                  <%= link_to 'Editar Perfil', edit_usuario_registration_path, :class => 'navbar-link' %> |
                                  <%= link_to "Salir", destroy_usuario_session_path, method: :delete, :class => 'navbar-link'  %>
                                  <% else %>
                                    <%= link_to "Registrarse", new_usuario_registration_path, :class => 'navbar-link'  %> |
                                    <%= link_to "Ingresar", new_usuario_session_path, :class => 'navbar-link'  %>
                                  <% end %>
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>


        </div>

      
    <div class="container-fluid">
      <% if notice %>
          <p class="alert alert-success"><%= notice %></p>
        <% end %>
        <% if alert %>
            <p class="alert alert-danger"><%= alert %></p>
          <% end %>
      <%= yield %>
    </div>
  </body>
</html>
